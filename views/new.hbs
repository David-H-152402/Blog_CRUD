<div class="container">
    <div class="row center">
        <div class="col s12">
            <br>
            <div class="row center" id="logo">
                <h2>The DUMP TRUMP Blog</h2>
            </div>
        </div>
    </div>
</div>
<div class="row center">
    <h5 class="white-text"> - Create New Post - </h5>
</div>
<div class="container">
    <div class="row">
        <form class="col s12" action='new/posting' method="post">
            <div class="white-text hoverable blue darken-4">
                <div class="input-field col s6">
                    <i class="material-icons prefix">mode_edit</i>
                    <input id='title' name="title" type="text">
                    <label for="title" class="active"><h6 class="teal-text text-lighten-2">Title:</h6></label>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">mode_edit</i>
                        <textarea name="body" class="materialize-textarea"></textarea>
                        <label for="textarea"><h6 class="teal-text text-lighten-2">Text Area:</h6></label>
                    </div>
                </div>
                <br>
                <div class="section">
                    <div class="row center">
                        <button class="btn waves-effect waves-light" type="submit">Post<i class="material-icons right">send</i></button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

