
<div class="container">
    <div class="row center">
        <div class="col s12">
            <br>
            <div class="row center" id="logo">
                <h2>The DUMP TRUMP Blog</h2>
            </div>
        </div>
    </div>
</div>
<div class="row center">
    <h5 class="white-text"> - Viewing Selected Post - </h5>
</div>
<div class="fixed-action-btn horizontal" style="top: 200px; right: 200px;">
    <a class="btn-floating btn-large red">
        <i class="large material-icons">list</i>
    </a>
    <ul>
        <li><a href="/posts/{{post.id}}" class="btn-floating red"><i class="material-icons">not_interested</i></a></li>
        <li><a href="/posts/edit/{{post.id}}" class="btn-floating blue darken-3"><i class="material-icons">mode_edit</i></a></li>
    </ul>
</div>
<div class="container">
    <div class="white-text hoverable blue darken-4">
        <div class="row">
            <div class="col s12">
                <h5 class="left-align"> Title: {{ post.title }}</h5>
            </div>
            <hr>
            <div class="col s12">
                <h6 class="right">{{ post.created_at }}</h6>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <p class="left-align" id="">{{ post.body }}</p>
            </div>
        </div>
    </div>
</div>
