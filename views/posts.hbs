
<div class="section no-pad-bot" id="index-banner">

    <div class="container">
        <div class="row center">
            <div class="col s12">
                <br>
                <div class="row center" id="logo">
                    <h2>The DUMP TRUMP Blog</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="row center">
        <h5 class="white-text"> - POSTS - </h5>
    </div>

    <div class="container">
        {{#each posts}}
            <div class="white-text hoverable blue darken-4">
                <div class="row">
                    <div class="col m6 s12 right-align">
                        <h5 class="left-align">{{this.title}}</h5>
                    </div>
                    <div class="col m6 s12" class="view_btn">
                        <a href="/posts/{{this.id}}" class="btn-floating btn-large waves-effect waves-light red right"><i class="material-icons">speaker_notes</i></a>
                    </div>
                    <hr>
                    <div class="col m6 s12">
                        <h6 class="right">{{this.date}}</h6>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <p class="left-align">{{this.body}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

</div>
