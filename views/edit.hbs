<div class="container">
    <div class="row center">
        <div class="col s12">
            <br>
            <div class="row center" id="logo">
                <h2>The DUMP TRUMP Blog</h2>
            </div>
        </div>
    </div>
</div>
<div class="row center">
    <h5 class="white-text"> - Editing Selected Post - </h5>
</div>

<div class="container">
    <div class="row">
        <form class="col s12" method="post" action="/posts/edit/{{post.id}}">
            <div class="white-text hoverable blue darken-4">
                <div class="input-field col s6">
                  <i class="material-icons prefix">mode_edit</i>
                    <input value="{{post.title}}" id="title" name="title" type="text">
                    <label for="title" class="active"><h6 class="teal-text text-lighten-2">Title:</h6></label>
                </div>
                <div class="row">

                    <div class="input-field col s12">
                      <i class="material-icons prefix">mode_edit</i>
                        <textarea id="textarea1" name="body" class="materialize-textarea" >{{post.body}}</textarea>
                        <label for="textarea1"><h6 class="teal-text text-lighten-2">Text Area:</h6></label>
                    </div>
                </div>
                <br>
                <div class="section">
                    <div class="row center">
                        <button class="btn waves-effect waves-light" type="submit">Update
        <i class="material-icons right">send</i>
      </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


